# Configure hook has two missions:
# 1. Set properties defaults on installation, so users can see them
# 2. Re-start daemon if a property has changed

HOSTFS="/var/lib/snapd/hostfs"
APPARMOR_PROFILE="/var/lib/snapd/apparmor/profiles/snap.dosbox.dosbox"
PROF_PATH="$HOSTFS$APPARMOR_PROFILE"

if [ -e "$PROF_PATH" ]; then
    apparmor_parser -R "$PROF_PATH"
fi

$SNAP/bin/dosbox

